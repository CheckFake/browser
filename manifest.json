{
  "manifest_version": 2,
  "name": "OnlyTrue",
  "version": "3.1.3",
  "description": "/!\\ DISCLAIMER: IN HEAVY DEVELOPMENT/!\\\n\nDisplays a confidence score about an article that has been submitted to the extension.",
  "homepage_url": "https://github.com/OnlyTrue-FND/browser",
  "icons": {
    "128": "icons/logo@2x.png"
  },
  "permissions": [
    "https://fakenewsdetector.augendre.info/*",
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/logo@2x.png",
    "default_title": "OnlyTrue",
    "default_popup": "popup/stats.html"
  },
  "background": {
    "scripts": ["background_scripts/background.js"]
  }
}