{
  "manifest_version": 2,
  "name": "Fake News Detector",
  "version": "1.1.2",
  "description": "/!\\ DISCLAIMER: IN HEAVY DEVELOPMENT/!\\\n\nDisplays a confidence score about an article that has been submitted to the extension.",
  "homepage_url": "https://github.com/Crocmagnon/fake-news-detector",
  "icons": {
    "128": "icons/logo128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/logo128.png",
    "default_title": "Fake News Detector",
    "default_popup": "popup/stats.html"
  },
  "background": {
    "scripts": ["background_scripts/background.js"]
  }
}