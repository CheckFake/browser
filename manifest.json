{
  "manifest_version": 2,
  "name": "CheckFake",
  "version": "3.1.16",
  "description": "CheckFake indique la pertinence des articles consult√©s en s'appuyant sur une API opensource : https://github.com/CheckFake/api",
  "homepage_url": "https://github.com/CheckFake/browser",
  "icons": {
    "128": "icons/logo@2x.png"
  },
  "permissions": [
    "https://api.checkfake.info/*",
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/logo@2x.png",
    "default_title": "CheckFake",
    "default_popup": "popup/stats.html"
  },
  "background": {
    "scripts": ["background_scripts/background.js"]
  }
}